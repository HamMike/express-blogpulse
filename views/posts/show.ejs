<h1><%= post.title %> <small>by <%= post.author.getFullName() %></small></h1>

<p>
  <strong><%= moment(post.createdAt).calendar() %></strong>
</p>

<p><%= post.content %></p>

<hr />


<h2>Comments</h2>

<% post.comments.forEach(function(comment) { %>
  <div class="well">
    <p>
      <%= comment.content %>
    </p>
    <h3>
      <%= comment.name %>
    </h3>
  </div>
<% }); %>

<form method='POST' action="<%= '/posts/' + post.id + '/comments' %>">
  <h6>name</h6>
  <input type='text' name='name' placeholder="Enter commenter's name...">
  <h6>comment</h6>
  <input type='text' name='content' placeholder="Enter comment...">
  <input type='hidden' name='postId' value='<%= post.id %>'>
  <input type='submit' value='Add Comment'>
</form>

<a href="/">&larr; Back Home</a>
